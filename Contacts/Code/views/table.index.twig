{# empty Twig template #}

<h1>Contact List</h1>

<a class="btn btn-primary pull-right" href="{{ generate_url('contacts.messages.add') }}">
    <i class="fa fa-arrow-right"></i>
    Send Message
</a>

{% for item in items %}

    <h4>
        <i class="fa fa-address-card"></i>
        {% if item.name %}
            {{ item.name }}
        {% endif %}
        {% if item.category_id %}
            {{ item.category_id_title }}
        {% endif %}
        
        Contacts
    </h4>

    <ul class="list-unstyled">
        {% if item.name %}
            <li>
                <b>Name:</b>{{ item.name }}
            </li>
        {% endif %}
        {% if item.category_id %}
            <li>
                <b>Category:</b>{{ item.category_id_title }}
            </li>
        {% endif %}
        {% if item.email %}
            <li>
                <b>Email:</b>{{ item.email }}
            </li>
        {% endif %}
        {% if item.phone %}
            <li>
                <b>Phone:</b>{{ item.phone }}
            </li>
        {% endif %}
        {% if item.address %}
            <li>
                <b>Address:</b>{{ item.address }}
            </li>
        {% endif %}
    </ul>
{% endfor %}



